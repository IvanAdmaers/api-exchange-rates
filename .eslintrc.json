{
    "env": {
        "es2021": true,
        "node": true,
        "jest/globals": true
    },
    "extends": [
        "airbnb-base",
        "plugin:jest/recommended",
        "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "semi": ["error", "always"],
        "no-console": "off",
        "no-unused-vars": ["error", { "argsIgnorePattern": "next" }],
        "class-methods-use-this": "off",
        "no-underscore-dangle": "off",
        "import/prefer-default-export": "off"
    }
}
